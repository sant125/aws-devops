            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/v1/curiosities": {
            "get": {
                "description": "Returns all tattoo curiosities and interesting facts",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "curiosities"
                ],
                "summary": "List tattoo curiosities",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Curiosity"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/curiosities/{id}": {
            "get": {
                "description": "Returns details of a specific curiosity by ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "curiosities"
                ],
                "summary": "Get a tattoo curiosity",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Curiosity ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.Curiosity"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/styles": {
            "get": {
                "description": "Returns all available tattoo styles",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "styles"
                ],
                "summary": "List tattoo styles",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Style"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/styles/{id}": {
            "get": {
                "description": "Returns details of a specific tattoo style by ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "styles"
                ],
                "summary": "Get a tattoo style",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Style ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.Style"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/health": {
            "get": {
                "description": "Returns service health status",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "system"
                ],
                "summary": "Health check",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Curiosity": {
            "type": "object",
            "properties": {
                "category": {
                    "description": "\"history\", \"culture\", \"science\", \"art\"",
                    "type": "string"
                },
                "content": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "models.Style": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "origin": {
                    "type": "string"
                },
                "popularity": {
                    "description": "\"high\", \"medium\", \"low\"",
                    "type": "string"
                }
            }
        }
    }
}